<div class="details-container">    
    <div class="details-header">
         <h2 class="details-title">{{this.title}}</h2>
        <img src="{{this.image}}" alt="" style="width:400px">
    </div>

    <div class="details-text-container">        
       <p class="details-text">Difficulty level: {{this.level}}</p>
       <p class="details-text">Ingredients: {{this.ingredients}}</p>
       {{#each this.ingredients}}
           <ul>
               <li>{{this}}</li>
           </ul>
       {{/each}}
       <p class="details-text">Cuisine: {{this.cuisine}}</p>
       <p class="details-text">Type of dish: {{this.dishType}}</p>   
       <p class="details-text">Duration: {{this.duration}}</p>
       <p class="details-text">Creator: {{this.creator}}</p>
    </div>
</div>